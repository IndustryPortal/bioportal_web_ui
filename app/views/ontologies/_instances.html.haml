  $( document ).ready(function() {
      const inst = document.querySelector("##{id}")
       const concept_id = "#{@instances_concept_id}"
       //print the instance count append to the tab title
       if(concept_id){
           inst.addEventListener("update" ,  (e) => {
              document.querySelector("#instances_count").textContent = e.detail.data["table"]["totalCount"]
          })
       }
  }, false);



